  <Fragment slot="header"><Header lang="en" /></Fragment>
  <section class="container py-12 max-w-4xl">
    <h1 class="text-3xl font-serif mb-8">Manuscript Submission</h1>
    
    <div class="bg-blue-50 border-l-4 border-blue-500 p-6 mb-8">
      <h2 class="text-xl font-semibold mb-3">How to Submit</h2>
      <p class="text-gray-700 mb-3">
        Please send your manuscript materials to our email:
      </p>
      <div class="space-y-2">
        <div class="flex items-center">
          <span class="mr-2">ðŸ“§</span>
          <a href="mailto:oukawk@yahoo.co.jp" class="text-blue-600 hover:text-blue-800 font-medium text-lg mr-2">
            oukawk@yahoo.co.jp
          </a>
          <span class="text-gray-500 text-sm">(Chinese, Japanese)</span>
        </div>
        <div class="flex items-center">
          <span class="mr-2">ðŸ“§</span>
          <a href="mailto:katsuyokobe@gmail.com" class="text-blue-600 hover:text-blue-800 font-medium text-lg mr-2">
            katsuyokobe@gmail.com
          </a>
          <span class="text-gray-500 text-sm">(Japanese, English)</span>
        </div>
      </div>
    </div>

    <div class="space-y-8">
      <!-- Submission Guidelines -->
      <div>
        <h2 class="text-xl font-semibold mb-4">Submission Guidelines</h2>
        <ul class="space-y-3 text-gray-700">
          <li class="flex items-start">
            <span class="text-blue-600 mr-2 mt-1">â€¢</span>
            <span>We welcome academic works in modern and contemporary Chinese political thought, legal studies, constitutional economics, and social culture</span>
          </li>
          <li class="flex items-start">
            <span class="text-blue-600 mr-2 mt-1">â€¢</span>
            <span>Submitted works should be original and unpublished by other publishers</span>
          </li>
          <li class="flex items-start">
            <span class="text-blue-600 mr-2 mt-1">â€¢</span>
            <span>Please provide a complete manuscript or detailed writing plan</span>
          </li>
          <li class="flex items-start">
            <span class="text-blue-600 mr-2 mt-1">â€¢</span>
            <span>We will respond within 30 business days after receiving your submission</span>
          </li>
        </ul>
      </div>

      <!-- Required Materials -->
      <div>
        <h2 class="text-xl font-semibold mb-4">Required Materials</h2>
        <div class="bg-gray-50 rounded-lg p-6">
          <ol class="space-y-3 text-gray-700">
            <li class="flex">
              <span class="font-medium mr-3">1.</span>
              <span>Author's biography (including academic background, research fields, major achievements)</span>
            </li>
            <li class="flex">
              <span class="font-medium mr-3">2.</span>
              <span>Work synopsis (within 3000 words)</span>
            </li>
            <li class="flex">
              <span class="font-medium mr-3">3.</span>
              <span>Table of contents</span>
            </li>
            <li class="flex">
              <span class="font-medium mr-3">4.</span>
              <span>Sample chapters (2-3 chapters)</span>
            </li>
            <li class="flex">
              <span class="font-medium mr-3">5.</span>
              <span>Expected completion date (if unfinished)</span>
            </li>
          </ol>
        </div>
      </div>

      <!-- Contact Information -->
      <div class="border-t pt-8">
        <h2 class="text-xl font-semibold mb-4">Contact Us</h2>
        <div class="text-gray-700 space-y-2">
          <p>If you have any questions, please feel free to contact us:</p>
          <div>
            <span class="font-medium mb-2 block">Email:</span>
            <div class="ml-4 space-y-1">
              <div class="flex items-center">
                <a href="mailto:oukawk@yahoo.co.jp" class="text-blue-600 hover:underline mr-2">oukawk@yahoo.co.jp</a>
                <span class="text-gray-500 text-sm">(Chinese, Japanese)</span>
              </div>
              <div class="flex items-center">
                <a href="mailto:katsuyokobe@gmail.com" class="text-blue-600 hover:underline mr-2">katsuyokobe@gmail.com</a>
                <span class="text-gray-500 text-sm">(Japanese, English)</span>
              </div>
            </div>
          </div>
          <div class="flex items-center">
            <span class="font-medium mr-2">FAX:</span>
            <span>+81-78-882-0353</span>
          </div>
        </div>
      </div>
    </div>
  </section>
  <Fragment slot="footer"><Footer /></Fragment>
